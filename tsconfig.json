{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "node",
      "@playwright/test"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fixtures/*": [
        "src/fixtures/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "playwright.config.ts"
  ]
}